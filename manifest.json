{
    "manifest_version": 2,
    "name": "Library Access: KeyForge Deck Sync Tool",
    "short_name": "Library Access",
    "version": "0.4",
    "permissions": [
        "activeTab",
        "cookies",
        "declarativeContent",
        "https://www.keyforgegame.com/",
        "https://decksofkeyforge.com/",
        "https://www.thecrucible.online/",
        "https://thecrucible.online/"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "100": "icon.png"
    }
}